{
  "name": "shockdoo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "firebase": "^4.6.0",
    "flexboxgrid": "^6.3.1",
    "font-awesome": "^4.7.0",
    "material-design-lite": "^1.3.0",
    "material-ui": "^0.19.4",
    "react": "<16.0.0",
    "react-dom": "<16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-tap-event-plugin": "<3.0.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "sha.js": "^2.4.9",
    "typeface-roboto": "^0.0.43"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.13",
    "firebase-tools": "^3.14.0",
    "flow-bin": "^0.57.3",
    "node-sass": "^4.5.3",
    "prettier": "^1.7.4",
    "react-scripts": "1.0.16",
    "source-map-explorer": "^1.5.0"
  },
  "scripts": {
    "serve": "firebase serve",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "analyze": "yarn build && source-map-explorer build/static/js/main.*",
    "flow": "flow",
    "format": "prettier --write \"src/**/*.js\" \"functions/index.js\"",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "deploy": "yarn build && firebase deploy",
    "deploy:firestore": "firebase deploy --only firestore:rules",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "yarn build && firebase deploy --only hosting"
  },
  "proxy": {
    "/__": {
      "target": "http://localhost:5000"
    }
  }
}
